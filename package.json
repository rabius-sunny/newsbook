{
  "name": "news-paper",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts",
    "docker:dev": "docker compose up",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker compose down -v",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down -v",
    "docker:logs": "docker compose logs -f",
    "docker:logs:prod": "docker compose -f docker-compose.prod.yml logs -f",
    "db:reset": "bun run docker:down && bun run docker:dev",
    "test:api": "curl -f http://localhost:3000/health",
    "check": "bunx tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  }
}
