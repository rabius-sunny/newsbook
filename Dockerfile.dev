FROM oven/bun:1.1.42-alpine AS base

# Development stage
FROM base AS development
WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Command will be overridden by docker-compose
CMD ["bun", "run", "dev"]
